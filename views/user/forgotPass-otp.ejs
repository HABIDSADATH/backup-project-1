            border-radius: 5px;
            display: block;
            margin-bottom: 15px;
            cursor: pointer;
            font-weight: bold;
            transition: background-color 0.3s;
        }

        .resend-btn:hover,
        .verify-btn:hover {
            background-color: #d63a3f;
        }

        .login-link {
            text-align: center;
            font-size: 0.9rem;
            color: #000;
            margin-top: 15px;
        }

        .login-link a {
            color: #f7444e;
            text-decoration: none;
        }

