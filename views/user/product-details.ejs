               <!-- Ratings -->
               <div class="product_rating mt-3">
                  <div class="stars">
                     <i class="fa fa-star"></i>
                     <i class="fa fa-star"></i>
                     <i class="fa fa-star"></i>
                     <i class="fa fa-star"></i>
                     <i class="fa fa-star-o"></i>
                     <span class="rating_count">(24 Reviews)</span>
                  </div>
               </div>

               <!-- Price Section -->
