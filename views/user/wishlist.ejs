




<%- include("../../views/partials/user/header") %>

    <style>
        .wishlist-container {
            padding: 75px 0;
        }

        .table-wishlist {
            width: 100%;
            border-collapse: collapse;
        }

        .table_head th {
            padding: 15px;
            text-align: left;
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
        }

        .table_row td {
            padding: 20px 15px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }

        .wishlist-product-img {
            width: 100px;
            height: 100px;
            object-fit: cover;
        }

        .btn-remove {
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-remove:hover {
            background-color: #e60000;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transform: scale(1.05);
        }

        .btn-cart {
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn-cart:hover {
            background-color: #45a049;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
            transform: scale(1.05);
        }

        .empty-wishlist {
            text-align: center;
            padding: 50px 0;
        }

        .empty-wishlist h3 {
            color: #6c757d;
            margin-bottom: 20px;
        }

        .continue-shopping {
            display: inline-block;
            background-color: #f7444e;
            color: white;
            padding: 12px 25px;
            text-decoration: none;
            border-radius: 5px;
            transition: all 0.3s ease;
        }

        .continue-shopping:hover {
            background-color: #d63031;
        }
    </style>


    <!-- Breadcrumb section -->
    <section class="breadcrumb_section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="/">Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Wishlist</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </section>

    <!-- Wishlist Section -->
    <div class="wishlist-container">
        <div class="container">
            <div class="row">
                <div class="col-12">
                  <%if(wishlist.length>0){%>

                    
                    <table class="table-wishlist">
                        <thead>
                            <tr class="table_head">
                                <th>Product</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Stock Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                          <%for(let product of wishlist){%>
                            <tr class="table_row">
                                <td>
                                    
                                    <a href="/productDetails?id=<%=product._id%>" class="option1">
                                        <img src="/uploads/re-image/<%=product.productImages[0]%>" alt="Product 1" class="wishlist-product-img">
                                    </a>
                                </td>
                                <td><%=product.productName%></td>
                                <td>â‚¹<%=product.salePrice%></td>
                                <%if(product.quantity>0){%>
                                <td><span style="color: #4CAF50;">In Stock</span></td>
                                <%}else{%>
                                <td><span style="color: #dc3545;">Out of Stock</span></td>
                                <%}%>
                                <td>
                                    <!-- <a  class="btn-cart" style="margin-right: 10px;">Add to Cart</a> -->
                                    <a class="btn-remove" onclick="confirmRemove('<%=product._id%>')">Remove</a>
                                </td>
                            </tr>
                            <%}%>
                        </tbody>
                    </table>
                    
                    <%}else{%>
                    <!-- Empty Wishlist State -->
                    <div class="empty-wishlist" >
                        <h3>Your wishlist is empty!</h3>
                        <p>Add items that you like to your wishlist</p>
                        <a href="/shop" class="continue-shopping">Continue Shopping</a>
                    </div>
                    <%}%>
                </div>
            </div>
        </div>
    </div>

    <script>
        function removeFromWishlist(productId) {
            // Add your remove from wishlist logic here
            console.log('Removing product:', productId);
        }

      

        function confirmRemove(productId) {
          if (confirm('Are you sure you want to remove this product from your wishlist?')) {
            window.location.href = `/removeFromWishlist?id=${productId}`;
          }
        }

        
    function addToCart(productId, quantity) {
     fetch(`/addToCart`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId: productId, quantity: quantity }) 
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            console.log('Product added to cart:', productId);
        } else {
            console.error('Error adding product to cart:', data.message);
        }
    })
    .catch(error => {
        console.error('Error:', error);
    });
}

    </script>

